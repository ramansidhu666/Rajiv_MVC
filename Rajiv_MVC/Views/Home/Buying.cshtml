<script>

    $(document).ready(function () {

        $('#btnBuying').click(function () {
            debugger;
            var street = $("#SearchBar_ddlTyps option:selected").text();
            var unit = $("#SearchBar_ddlBeds option:selected").text();
            var streetName = $("#SearchBar_ddlBaths option:selected").text();
            var city = $("input[name=city1]").val();
            if ($("input[name=username1]").val() == "") {
                $('#message5').html('This field is required');
                $('#message6').html('');
                $('#message7').html('');
                $('#message8').html('');
            }
            else if ($("input[name=lastname1]").val() == "") {
                $('#message6').html('This field is required');
                $('#message5').html('');
                $('#message7').html('');
                $('#message8').html('');
            }
            else if ($("input[name=phn1]").val() == "") {
                $('#message7').html('This field is required');
                $('#message6').html('');
                $('#message5').html('');
                $('#message8').html('');
            }
            else if ($("input[name=email1]").val() == "") {
                $('#message8').html('This field is required');
                $('#message6').html('');
                $('#message5').html('');
                $('#message7').html('');
            }


            if ($("input[name=username1]").val() != "" && $("input[name=lastname1]").val() != "" && $("input[name=email1]").val() != "" && $("input[name=phn1]").val() != "" ) {

                $.ajax({

                    url: "/Home/Buying",
                    data: { 'username': $("input[name=username1]").val(), 'lastname': $("input[name=lastname1]").val(), 'Email': $("input[name=email1]").val(), 'phn': $("input[name=phn1]").val(), 'street': street, 'unit': unit, 'streetName': streetName, 'city': city },
                    type: "POST",
                    dataType: 'json',
                    success: function (data) {
                        debugger;
                        alert('Mail has been sent to admin. You will be contacted shortly.');
                        $('#message5').html('');
                        $('#message6').html('');
                        $('#message7').html('');
                        $('#message8').html('');

                        $("input[name=username1]").val('');
                        $("input[name=lastname1]").val('');
                        $("input[name=email1]").val('');
                        $("input[name=phn1]").val('');


                        $("input[name=city1]").val('');
                        return false;
                    },
                    error: function () {

                        alert("Dynamic content load failed.");
                    }
                });
            }
        });
    });
    </script>